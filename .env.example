# Environment Variables for HealthCheck CLI
# Copy this file to .env and set your actual values
# Keep .env in your .gitignore to avoid committing secrets

# Email notification settings
EMAIL_PASSWORD=your_smtp_password_here

# Slack webhook URL
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord webhook URL  
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Telegram bot configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# API tokens for health check authorization
API_TOKEN=your_api_bearer_token

# Database credentials (if needed for health checks)
DB_PASSWORD=your_database_password

# Custom webhook authentication
WEBHOOK_SECRET=your_webhook_secret_key

# Optional: Override default configuration values
MAX_WORKERS=20
DEFAULT_TIMEOUT=10s
DEFAULT_INTERVAL=30s
STORAGE_PATH=./healthcheck.db
LOG_LEVEL=info